{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Novelous Application Data Schema",
  "type": "object",
  "required": [
    "updatePeriodMinutes",
    "siteSettings",
    "subscriptionSettings",
    "watchSettings"
  ],
  "properties": {
    "updatePeriodMinutes": {
      "title": "updatePeriodMinutes",
      "type": "integer",
      "minimum": 15,
      "default": 30
    },
    "lastUpdatedAt": {
      "type": "integer"
    },
    "siteSettings": {
      "title": "siteSettings",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "narou": {
          "title": "小説家になろう",
          "oneOf": [
            { "type": "boolean" },
            { "type": "object" }
          ],
          "default": true
        },
        "kakuyomu": {
          "title": "カクヨム",
          "oneOf": [
            { "type": "boolean" },
            { "type": "object" }
          ],
          "default": true
        }
      }
    },
    "subscriptionSettings": {
      "title": "subscriptionSettings",
      "type": "array",
      "default": [
        { "siteName": "narou", "itemType": "myMessages", "enabled": true },
        { "siteName": "narou", "itemType": "myComments", "enabled": true },
        { "siteName": "narou", "itemType": "myReviews", "enabled": true },
        { "siteName": "kakuyomu", "itemType": "myNovels", "enabled": true }
      ],
      "additionalItems": false,
      "items": {
        "title": "subscription",
        "type": "object",
        "additionalProperties": false,
        "required": [
          "siteName",
          "itemType",
          "enabled"
        ],
        "properties": {
          "siteName": { "$ref": "#/definitions/siteName" },
          "itemType": { "$ref": "#/definitions/itemType" },
          "itemId": { "$ref": "#/definitions/itemId" },
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "item": {},
          "lastUpdatedAt": {
            "oneOf": [
              { "type": "integer" },
              { "type": "null" }
            ]
          }
        }
      }
    },
    "watchSettings": {
      "type": "array",
      "default": [
        { "id": "narou-myMessages", "valueType": "set", "valueKey": "*.id" },
        { "id": "narou-myComments", "valueType": "set", "valueKey": "*.id" },
        { "id": "narou-myReviews", "valueType": "set", "valueKey": "*.id" },
        { "id": "kakuyomu-myNovels", "valueType": "set", "valueKey": "*.reviews.*.id" }
      ],
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "valueType"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "valueType": {
            "enum": ["any", "number", "set", "count"],
            "default": "any"
          },
          "valueKey": {
            "type": "string",
            "pattern": "^(\\*|[a-zA-Z0-9_]+)(\\.(\\*|[a-zA-Z0-9_]+))*$"
          },
          "seenValue": {},
          "lastValue": {}
        }
      }
    }
  },
  "definitions": {
    "siteName": {
      "type": "string",
      "enum": ["narou", "kakuyomu"]
    },
    "itemType": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_]+$"
    },
    "itemId": {
      "type": "string",
      "minLength": 1
    }
  }
}
