{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Novelous Application Data Schema",
  "type": "object",
  "required": [
    "updatePeriodMinutes",
    "siteSettings",
    "subscriptionSettings"
  ],
  "properties": {
    "updatePeriodMinutes": {
      "title": "updatePeriodMinutes",
      "type": "integer",
      "minimum": 15,
      "default": 30
    },
    "lastUpdatedAt": {
      "type": "integer"
    },
    "siteSettings": {
      "title": "siteSettings",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "narou": {
          "title": "小説家になろう",
          "oneOf": [
            { "type": "boolean" },
            { "type": "object" }
          ],
          "default": true
        },
        "kakuyomu": {
          "title": "カクヨム",
          "oneOf": [
            { "type": "boolean" },
            { "type": "object" }
          ],
          "default": true
        }
      }
    },
    "subscriptionSettings": {
      "title": "subscriptionSettings",
      "type": "array",
      "default": [
        { "feedName": "narou-messages", "enabled": true },
        { "feedName": "narou-comments", "enabled": true },
        { "feedName": "narou-reviews", "enabled": true },
        { "feedName": "kakuyomu-reviews", "enabled": true }
      ],
      "additionalItems": false,
      "items": {
        "title": "subscription",
        "type": "object",
        "additionalProperties": false,
        "required": [
          "feedName",
          "enabled"
        ],
        "properties": {
          "feedName": {
            "type": "string",
            "minLength": 1
          },
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "feedData": {
            "type": "object",
            "properties": {
              "items": {
                "type": "array",
                "items": { "type": "object" }
              },
              "watch": {}
            }
          },
          "lastUpdatedAt": {
            "oneOf": [
              { "type": "integer" },
              { "type": "null" }
            ]
          }
        }
      }
    }
  }
}
