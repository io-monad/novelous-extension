{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Novelous Application Data Schema",
  "type": "object",
  "required": [
    "updatePeriodMinutes",
    "siteSettings",
    "subscriptionSettings",
    "notificationSettings"
  ],
  "properties": {
    "updatePeriodMinutes": {
      "title": "updatePeriodMinutes",
      "type": "integer",
      "minimum": 15,
      "default": 30
    },
    "lastUpdatedAt": {
      "type": "integer"
    },
    "siteSettings": {
      "title": "siteSettings",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "narou": {
          "title": "小説家になろう",
          "oneOf": [
            { "type": "boolean" },
            { "type": "object" }
          ],
          "default": true
        },
        "kakuyomu": {
          "title": "カクヨム",
          "oneOf": [
            { "type": "boolean" },
            { "type": "object" }
          ],
          "default": true
        }
      }
    },
    "subscriptionSettings": {
      "title": "subscriptionSettings",
      "type": "array",
      "default": [
        { "feedUrl": "novelous-feed://narou/messages" },
        { "feedUrl": "novelous-feed://narou/comments" },
        { "feedUrl": "novelous-feed://narou/blog-comments" },
        { "feedUrl": "novelous-feed://narou/reviews" },
        { "feedUrl": "novelous-feed://kakuyomu/reviews" }
      ],
      "additionalItems": false,
      "items": {
        "title": "subscription",
        "type": "object",
        "additionalProperties": false,
        "required": ["feedUrl"],
        "properties": {
          "feedUrl": {
            "type": "string",
            "minLength": 1
          },
          "feedData": {
            "type": "object"
          },
          "fetchOptions": {
            "type": "object"
          },
          "watch": {
            "enum": ["set", "number"],
            "default": "set"
          },
          "watchState": {
            "type": "object"
          },
          "watchOptions": {
            "type": "object"
          },
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "lastUpdatedAt": {
            "oneOf": [
              { "type": "integer" },
              { "type": "null" }
            ]
          }
        }
      }
    },
    "notificationSettings": {
      "title": "notificationSettings",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "alertEnabled": {
          "type": "boolean",
          "default": true
        },
        "soundEnabled": {
          "type": "boolean",
          "default": true
        },
        "autoCloseSeconds": {
          "type": "number",
          "minimum": 0,
          "default": 5
        }
      }
    }
  }
}
