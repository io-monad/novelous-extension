{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Novelous Options",
  "type": "object",
  "required": [
    "updatePeriodMinutes",
    "siteSettings",
    "subscriptionSettings"
  ],
  "properties": {
    "updatePeriodMinutes": {
      "title": "updatePeriodMinutes",
      "type": "integer",
      "minimum": 5,
      "default": 15
    },
    "siteSettings": {
      "title": "siteSettings",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "narou": {
          "title": "小説家になろう",
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "object",
              "properties": {
              }
            }
          ],
          "default": true
        },
        "kakuyomu": {
          "title": "カクヨム",
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "object",
              "properties": {
              }
            }
          ],
          "default": true
        }
      }
    },
    "subscriptionSettings": {
      "title": "subscriptionSettings",
      "type": "array",
      "default": [],
      "additionalItems": false,
      "items": {
        "title": "subscription",
        "type": "object",
        "additionalProperties": false,
        "required": [
          "siteName",
          "itemType",
          "itemId"
        ],
        "properties": {
          "siteName": {
            "type": "string",
            "enum": ["narou", "kakuyomu"]
          },
          "itemType": {
            "type": "string",
            "minLength": 1
          },
          "itemId": {
            "type": "string",
            "minLength": 1
          },
          "item": {
            "oneOf": [
              { "type": "object" },
              { "type": "null" }
            ]
          },
          "lastUpdatedAt": {
            "oneOf": [
              { "type": "integer" },
              { "type": "null" }
            ]
          }
        }
      }
    }
  }
}
