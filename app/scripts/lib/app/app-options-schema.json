{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "updatePeriodMinutes",
    "notificationSettings"
  ],
  "properties": {
    "updatePeriodMinutes": {
      "type": "integer",
      "minimum": 30,
      "default": 30,
      "enum": [30, 60, 120, 180, 720, 1440],
      "enumNames": [
        "every 30 minutes",
        "every 1 hour",
        "every 2 hours",
        "every 3 hours",
        "every 12 hours",
        "every 24 hours"
      ]
    },
    "notificationSettings": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "alertEnabled": {
          "type": "boolean",
          "default": true
        },
        "soundEnabled": {
          "type": "boolean",
          "default": true
        },
        "autoCloseSeconds": {
          "type": "number",
          "minimum": 0,
          "default": 0,
          "enum": [0, 3, 5, 7, 10],
          "enumNames": [
            "never close",
            "after 3 seconds",
            "after 5 seconds",
            "after 7 seconds",
            "after 10 seconds"
          ]
        }
      }
    }
  },
  "uiSchema": {
    "ui:order": [
      "updatePeriodMinutes",
      "notificationSettings"
    ],
    "ui:rootFieldId": "options",
    "notificationSettings": {
      "ui:order": [
        "soundEnabled",
        "alertEnabled",
        "autoCloseSeconds"
      ]
    }
  }
}
